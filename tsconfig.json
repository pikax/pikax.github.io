{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "es5",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "es2015",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src": [
        "src/"
      ]
    }
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
